<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="YellowTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="OrangeTheme" parent="android:Theme.Material.Light">

        <item name="android:colorPrimary">@color/orangePrimary</item>
        <item name="android:colorAccent">@color/orangeAccent</item>
        <item name="android:colorPrimaryDark">@color/orangeBar</item>

    </style>

    <style name="YellowTheme" parent="android:Theme.Material.Light">

        <item name="android:colorPrimary">@color/yellowPrimary</item>
        <item name="android:colorAccent">@color/yellowAccent</item>
        <item name="android:colorPrimaryDark">@color/yellowBar</item>

    </style>

    <style name="GreenTheme" parent="android:Theme.Material.Light">

        <item name="android:colorPrimary">@color/greenPrimary</item>
        <item name="android:colorAccent">@color/greenAccent</item>
        <item name="android:colorPrimaryDark">@color/greenBar</item>

    </style>

</resources>
